			+ '</div>' + '</div>';

	function loadYueSaoServiceList() {
		$.post("http://10.10.1.219:8080/yuesao/service/list", {
			page : 1,
			pageSize : 100
		}, function(result) {
			if (result.code == "USR000") {
				$('.combo').empty();
				var services = result.data.list;
				for (var i = 0; i < services.length; i++) {
					var div = serviceTemplate.replace('[name]',
							services[i].serviceName).replace('[price]',
							services[i].teamPrice);
					div = $(div);
					div.find('.text').empty().html(services.introduce);
					$('.combo').append(div);
				}
			}else if(result.code == "USR108"){
				 layer.open({
		              content: result.msg
		              ,btn: ['确定',],
		              skin:'my-skin'
		              ,yes: function(index){
		                  layer.close(index);
		              }
				 });
			}else if(result.code == "USR100"){
				 layer.open({
		              content: result.msg
		              ,btn: ['确定',],
		              skin:'my-skin'
		              ,yes: function(index){
		                  layer.close(index);
		              }
				 });
			}else if(result.code == "USR201"){
				 layer.open({
		              content: result.msg
