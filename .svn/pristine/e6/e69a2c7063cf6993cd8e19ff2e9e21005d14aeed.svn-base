<script>
    var swiper = new Swiper('.swiper-container', {
        spaceBetween: 30,
        pagination: {
            el: '.swiper-pagination',
            clickable: true,
        },
        autoplay: {
            delay:3000,
            stopOnLastSlide: false,
            disableOnInteraction: true,
        },
    });
    var swiper2 = new Swiper('.recommentd-swiper', {
        navigation: {
            nextEl: '.swiper-button-next',
            prevEl: '.swiper-button-prev',
        },
    });



    $(".arrow_right").click(function () {
        var left = $(".doctor_sex").css('left');

        console.log(left);

        //判断元素是否正处于动画状态
        var isAnimated  = $("#product_box ul").is(":animated");
        //如果当前没有进行动画，则添加新动画
        if (!isAnimated) {
            $(".doctor_sex").animate({
                left: '-=335px'
            });
        }
    });

    $(".arrow_left").click(function () {
        var left = $(".doctor_sex").css('left');

        console.log(left);

        //判断元素是否正处于动画状态
        var isAnimated  = $("#product_box ul").is(":animated");
        //如果当前没有进行动画，则添加新动画
        if (!isAnimated) {
            $(".doctor_sex").animate({
                left: '+=335px'
            });
        }
    });
