
.warp{
  width: 100%;
  height: 100%;
  header{
    height: 0.42rem;
    line-height: 0.42rem;
    border-bottom: 1px solid #e5e5e5;
    background-color: #f0f0f0;
    text-align: center;
    font-size:0.36rem;
    color: #333333;
    padding: 0.25rem;
    .back{
      display: block;
      width:0.28rem;
      height: 0.28rem;
      background: url("../images/doctor-01/icon_back.png") no-repeat;
      background-size:0.28rem 0.28rem;
      margin-top:0.1rem;

    }
    .save{
      font-size:0.32rem;

    }
  }
  .main{

    .record_box{
      ul{
        li{
          height:0.8rem;
          line-height:0.8rem;
          font-size: 0.3rem;
          color: #333333;
          padding: 0.25rem;
          &:nth-child(even){
            background-color: #fafafa;
          };
          input{
            border: none;
            background-color: #fafafa;

          }
          .yappin{
            margin-top: 0.2rem;
            width: 2.1rem;
            background-color: #fff;

          }
          &:last-child{
            border-bottom: 1px solid #e5e5e5;
          }
        }
      }
      .describe{
        width: 100%;
        text-align: center;
        textarea{
          width: 90%;
          height: 5.1rem;
          background-color: #fff;
          border: none;
          padding-top: 0.2rem;
          outline: none;

        }
      }
    }
  }
}